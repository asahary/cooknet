<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    tools:context="com.asahary.foodnet.Actividades.RegisterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUsuario"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user_generic"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:layout_alignBottom="@+id/imgUsuario"
                android:layout_toRightOf="@+id/imgUsuario"
                android:src="@drawable/ic_camera"
                />
            <TextView
                android:id="@+id/lblNick"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Nick"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_below="@+id/imgUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:id="@+id/txtNick"
                android:hint="Tu nick"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/lblNick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lblPass1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Contraseña"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_below="@+id/txtNick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txtPass"
                android:hint="pass"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginLeft="15dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblPass1"/>

            <TextView
                android:id="@+id/lblPass2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Repetir contraseña"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_below="@+id/txtPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txtPass2"
                android:hint="repeat pass"
                android:layout_marginLeft="15dp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblPass2"/>

            <EditText
                android:id="@+id/txtEmail"
                android:hint="Email"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblEmail"/>
            <TextView
                android:id="@+id/lblEmail"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Email"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_below="@+id/txtPass2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lblNombre"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Nombre"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_below="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/txtNombre"
                android:hint="Tu nombre"
                android:layout_marginLeft="15dp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblNombre"/>

            <TextView
                android:id="@+id/lblApellidos"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Apellidos"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_below="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/txtApellidos"
                android:hint="Apellidos"
                android:layout_marginLeft="15dp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblApellidos"/>

            <Button
                android:layout_margin="20dp"
                android:id="@+id/btnRegister"
                android:text="Registrar"
                android:layout_below="@+id/txtApellidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/customButton"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
