<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.asahary.foodnet.Actividades.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"></FrameLayout>
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/colorPrimary"
            app:itemIconTint="@drawable/bottom_icons_colors"
            app:itemTextColor="@drawable/bottom_icons_colors"
            app:menu="@menu/botton_mavigation_menu"
            android:isScrollContainer="false"
            />
    <ImageView
        android:id="@+id/imgCarga"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="70dp"
        android:layout_height="70dp" />


</RelativeLayout>
