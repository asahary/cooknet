<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <EditText
        android:id="@+id/txtCant"
        android:hint="Cant."
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/medidas"
        android:layout_toRightOf="@+id/txtCant"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:entries="@array/medidas"></Spinner>
    <EditText
        android:id="@+id/txtNombre"
        android:hint="Nombre"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_toRightOf="@+id/medidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btnQuitarr" />
    <ImageView
        android:id="@+id/btnQuitarr"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>