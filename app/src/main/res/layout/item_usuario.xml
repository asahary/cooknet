<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUsuario"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/lblNickUsuario"
        android:text="nick"
        style="@style/Widget.Design.TextInputLayout"
        android:layout_toRightOf="@+id/imgUsuario"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/lblNombreUsuario"
        android:layout_toRightOf="@+id/imgUsuario"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/lblNickUsuario"
        android:text="nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblApellidosUsuario"
        android:layout_toRightOf="@+id/imgUsuario"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/lblNombreUsuario"
        android:text="apellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>